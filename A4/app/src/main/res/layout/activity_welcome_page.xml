<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.yuqinghe.a4.welcomePage">

    <TextView
        android:id="@+id/view1_textView1"
        android:layout_width="135dp"
        android:layout_height="78dp"
        android:layout_marginTop="116dp"
        android:text="SIMON GAME"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view1_textView2"
        android:layout_width="185dp"
        android:layout_height="112dp"
        android:layout_marginTop="164dp"
        android:text="Follow the sequence played by computer, click each button in order. Inside setting, you can change the difficulty level."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view1_button1"
        android:layout_width="128dp"
        android:layout_height="58dp"
        android:layout_marginTop="288dp"
        android:text="START GAME"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view1_button2"
        android:layout_width="126dp"
        android:layout_height="52dp"
        android:layout_marginTop="368dp"
        android:text="SETTINGS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
